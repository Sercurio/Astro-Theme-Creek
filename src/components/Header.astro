---
import { Image } from "astro:assets";
const { title, subtitle } = Astro.props;

import banner from "@/assets/banner.png";
import avatar from "@/assets/avatar.jpg";
---

<div class="bg-base-100 w-full min-w-full shadow-md md:pb-3">
  <div class="mt-10 w-full">
    <p class="pt-6 pl-6 mt-1 text-xs font-medium text-black">{subtitle}</p>
    <h1 class="pl-6 mb-3 text-lg font-black text-black md:text-4xl">
      {title}
    </h1>
  </div>
</div>
