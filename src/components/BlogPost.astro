---
import Image from "astro/components/Image.astro";
import EmailSignup from "./Subscribe/EmailSignup.astro";

export interface Props {
  title: string;
  date: string;
  hero: string;
  youtube: string;
}

const { title, date, hero, youtube } = Astro.props;
---

<article class="max-w-5xl mx-auto px-3">
  <header class="mx-auto max-w-3xl content">
    <h1>{title}</h1>
  </header>

  <p class="max-w-3xl mx-auto content">Je suis un chapeau</p>

  <!-- Image -->
  {
    hero && (
      <img
        class="rounded-xl mx-auto max-w-sm"
        loading="lazy"
        src={hero}
        alt={title}
      />
    )
  }

  <!-- YouTube Video -->
  {
    youtube && (
      <div class="embed-responsive aspect-ratio-16/9 mt-6 lg:mt-12">
        <iframe
          width="700"
          height="500"
          class="embed-responsive-item"
          src={`https://www.youtube.com/embed/${youtube}`}
          frameborder="0"
          allow="accelerometer; autoplay; encrypted-media; gyroscope;"
          allowfullscreen
        />
      </div>
    )
  }

  <!-- Content -->
  <section class="max-w-3xl mx-auto py-6 lg:py-12 content text-justify">
    <slot />
  </section>

  <EmailSignup />
</article>
